;                notifyScroll() ;                run() ;            }            else             {                _scroll = 1 ;            }        }                /**         * Returns the scroller signal reference.         */        public function get scroller():Signal        {            return  _scroller ;        }                /**         * Notify a scroll message.         */        public function notifyScroll():void         {            if ( isLocked() )             {                return ;            }            _scroller.emit( this ) ;        }                /**         * This method is invoked when the rendering is finished to finalize the it after the measure invokation.         */        public override function update():void        {            if ( _children.length > 0 )            {                const hor:Boolean = _direction == Direction.HORIZONTAL ;                const pro:String  = ( hor ? propX : propY ) ;                const tpr:String  = "t" + pro ;                const pad:Number = hor ? replaceNaN(_padding.left) : replaceNaN(_padding.top) ;                                const offset:Number = _children[ scroll-1][tpr] - pad ;                                for each( var entry:LayoutEntry in _children )                {                    entry["t"+pro] -= offset  ;                }                                if ( _easingMode )                {                    _tween.target  = _children[0].child;                    _tween.to      = {} ;                    _tween.to[pro] = _children[ 0 ][tpr] ;                    _tween.run() ;                }                else                {                    resetTween() ;                    finish() ;                }            }        }                /**         * @private         */        protected var _easingMode:Boolean ;                /**         * @private         */        protected var _scroll:uint = 