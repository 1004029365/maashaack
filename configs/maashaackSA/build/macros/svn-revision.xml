
<project>
    
    <macrodef name="svn-revision">
        <attribute name="path"/>
        
        <sequential>
            <svn username="${credentials.svn.username}" password="${credentials.svn.password}" javahl="false" svnkit="false">
                <info target="@{path}"/>
            </svn>
            <property name="projects.MetaBuild.version.revision" value="${svn.info.rev}"/>
        </sequential>
    </macrodef>
    
</project>
