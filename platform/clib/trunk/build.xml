<?xml version="1.0" encoding="UTF-8"?>

<project name="clib-SA" default="main" basedir=".">
    
    <target name="define">
        
        <property name="FLEX_HOME_MAC" value="/OpenSource/Flex/sdks/4.0.0.7219" />
        <property name="FLEX_HOME_WIN" value="c:/OpenSource/Flex/sdks/4.0.0.7219" />
        
        <property name="local.flashplayerversion" value="9.0.124" />
        
        <condition property="FLEX_HOME" value="${FLEX_HOME_MAC}">
            <os family="mac" />
        </condition>
        
        <condition property="FLEX_HOME" value="${FLEX_HOME_WIN}">
            <os family="windows" />
        </condition>

        <tstamp>
            <format property="TODAY" pattern="dd MMMM yyyy" />
        </tstamp>
        
        <property file="build/build.properties"/>
        
        <taskdef resource="flexTasks.tasks" classpath="${FLEX_HOME}/ant/lib/flexTasks.jar" />
        
    </target>
    
    <target name="clean" depends="define">
        <delete dir="${basedir}/${release.dir}" />
    </target>
    
    <import file="meta.xml" />
    
</project>
